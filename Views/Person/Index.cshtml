@model IEnumerable<S2P1.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<h1>List of People</h1>

<table class="table">
    <thead>
        <tr>
           

            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Address.AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.AddressLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.AddressLine3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.AddressLine4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.AddressLine5)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.Address.Code)
           
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Address.AddressLine1)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Address.AddressLine2)
            </td>

          

            <td>
               @Html.DisplayFor(modelItem => item.Address.AddressLine3)
            </td>

            <td>
               @Html.DisplayFor(modelItem => item.Address.AddressLine4)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Address.AddressLine5)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Address.Code)
            </td>

            <td>
                @Html.ActionLink("Details", "Details", new { id=item.Id })
               
            </td>
        </tr>
}
    </tbody>
</table>
